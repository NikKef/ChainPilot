# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ChainGPT API
CHAINGPT_API_KEY=your_chaingpt_api_key

# BNB Chain RPC Endpoints
BNB_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
BNB_MAINNET_RPC_URL=https://bsc-dataseed.binance.org

# =============================================================================
# Q402 Configuration (Gas-sponsored sign-to-pay)
# =============================================================================

# Use local facilitator (set to /api/facilitator for self-hosted)
Q402_API_URL=/api/facilitator

# Contract addresses (BSC Testnet) - Update with deployed contracts
Q402_IMPLEMENTATION_TESTNET=
Q402_VERIFIER_TESTNET=
Q402_FACILITATOR_WALLET_TESTNET=
Q402_BATCH_EXECUTOR_TESTNET=

# Contract addresses (BSC Mainnet) - Update with deployed contracts
Q402_IMPLEMENTATION_MAINNET=
Q402_VERIFIER_MAINNET=
Q402_FACILITATOR_WALLET_MAINNET=
Q402_BATCH_EXECUTOR_MAINNET=

# =============================================================================
# FACILITATOR SERVICE CONFIGURATION (Required for self-hosted facilitator)
# =============================================================================

# ⚠️  CRITICAL: Sponsor wallet private key (pays gas for all users)
# Generate a new wallet and fund it with BNB for gas fees
# NEVER commit this key to version control!
FACILITATOR_PRIVATE_KEY=0x_YOUR_PRIVATE_KEY_HERE

# Sponsor wallet address (derived from private key)
# This is optional - will be derived automatically if not set
FACILITATOR_ADDRESS=

# RPC endpoints
RPC_URL_BSC_TESTNET=https://data-seed-prebsc-1-s1.binance.org:8545
RPC_URL_BSC_MAINNET=https://bsc-dataseed.binance.org

# Security: Whitelist of allowed implementation contracts
# Comma-separated addresses
IMPLEMENTATION_WHITELIST=

# Gas limits
MAX_GAS_PRICE_GWEI=20
MAX_GAS_LIMIT=5000000

# Budget limits
DAILY_GAS_BUDGET_BNB=1
PER_TX_MAX_GAS_BNB=0.01

# Rate limiting
MAX_REQUESTS_PER_MINUTE=10
MAX_REQUESTS_PER_ADDRESS=100

# BscScan API key (for contract verification) - (Etherscan V2 api key)
# Get your key at: https://bscscan.com/myapikey
BSCSCAN_API_KEY=

# App Configuration
NEXT_PUBLIC_DEFAULT_NETWORK=testnet
NEXT_PUBLIC_APP_URL=http://localhost:3000

